<h1>New Post</h1>
<div>
  <form>
   <div class="form-group">
     <label for="author">Author</label>
     {{input value=author id="author" class="form-control"}}
   </div>

   <div class="form-group">
     <label for="title">Title</label>
     {{input value=title id="title" class="form-control"}}
   </div>

   <div class="form-group">
     <label for="text">Text</label>
     {{textarea value=text id="text" class="form-control" rows="10"}}
   </div>

   <div class="form-group">
     <label for="image">Image URL</label>
     {{input value=image id="image" class="form-control"}}
   </div>

   <div class="form-group">
     <label for="category">Category</label>
     {{#x-select value=category class="form-control"}}
       {{#x-option value="scifi"}}Sci-Fi{{/x-option}}
       {{#x-option value="fantasy"}}Fantasy{{/x-option}}
       {{#x-option value="histfict"}}Historical Fiction{{/x-option}}
       {{#x-option value="thriller"}}Thriller/Horror{{/x-option}}
       {{#x-option value="romance"}}Romance{{/x-option}}
       {{#x-option value="nonfiction"}}Non-Fiction{{/x-option}}
     {{/x-select}}
   </div>

   <button class="btn btn-info" {{action 'save'}}>Save</button>
  </form>
</div>
